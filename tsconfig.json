{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["./api/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"],
      "@router/*": ["./router/*"],
      "@assets/*": ["./assets/*"],
      "@screens/*": ["./screens/*"],
      "@context/*": ["./context/*"],
      "@layouts/*": ["./layouts/*"],
      "@locales/*": ["./locales/*"],
      "@reducers/*": ["./reducers/*"],
      "@globalTypes/*": ["./types/*"],
      "@constants/*": ["./constants/*"],
      "@images/*": ["./assets/images/*"],
      "@components/*": ["./components/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./index.js",
    "./App.tsx",
    "./react-native.config.js",
    "./__tests__",
    "./.eslintrc.js",
    "./babel.config.js",
    "./metro.config.js"
  ],
  "typeRoots": ["./src/types"]
}
